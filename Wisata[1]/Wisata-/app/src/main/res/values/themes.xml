<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Wisata" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="Theme.Wisata" parent="Base.Theme.Wisata" />

    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/thema1</item>
        <item name="colorPrimaryDark">@color/thema1</item>
        <item name="colorAccent">@color/thema1</item>
    </style>


    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>


    <style name="FormLayout">
        <item name="boxCornerRadiusBottomEnd">6dp</item>
        <item name="boxCornerRadiusBottomStart">6dp</item>
        <item name="boxCornerRadiusTopEnd">6dp</item>
        <item name="boxCornerRadiusTopStart">6dp</item>
        <item name="boxStrokeColor">@color/thema2</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="boxStrokeWidthFocused">1dp</item>
        <item name="hintEnabled">false</item>
        <item name="colorControlActivated">@color/thema2</item>
        <item name="android:layout_marginStart">24dp</item>
        <item name="android:layout_marginEnd">24dp</item>
    </style>
    <style name="FormInput">
        <item name="android:padding">0dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/satoshi_regular</item>
    </style>

    <style name="ButtonWhiteOutline">
        <item name="textAllCaps">false</item>
        <item name="android:textColor">#03A9F4</item>
        <item name="backgroundTint">@color/white</item>
        <item name="strokeWidth">1dp</item>
        <item name="strokeColor">#03A9F4</item>
        <item name="cornerRadius">4dp</item>
    </style>


    <!-- Base application theme. -->
    <style name="Base.Theme.TanamanHias" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <item name="colorPrimary">@color/thema1</item>
        <item name="colorSecondaryContainer">@color/thema2</item>
        <item name="android:statusBarColor">@color/thema1</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="Theme.TanamanHias" parent="Base.Theme.TanamanHias" />
</resources>